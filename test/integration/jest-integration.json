{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "../..",
    "testRegex": "test/integration/.*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage/integration",
    "testEnvironment": "node",
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testTimeout": 60000,
    "verbose": true,
    "setupFilesAfterEnv": [
        "<rootDir>/test/integration/setup.ts"
    ]
}