# Test Environment Configuration
# Copy this file to .env.test and fill in your test database credentials

APP_ENV=test
APP_TIMEZONE=Asia/Ho_Chi_Minh
APP_PORT=3001

# Test Database (separate from development/production)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=datn_uit_test
DB_USERNAME=root
DB_PASSWORD=
DB_LOGGING=false

# Security
BCRYPT_ROUNDS=4
JWT_SECRET_PRIVATEKEY=test-jwt-secret-key
JWT_SECRET_PUBLICKEY=test-jwt-public-key
JWT_EXPIRES_IN=15mins
JWT_REFRESH_TOKEN_SECRET=test-refresh-secret
JWT_REFRESH_TOKEN_EXPIRES_IN=30d

# Redis (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
